NAME = minirt
CC = gcc
CFLAGS = -Wall -Werror -Wextra -g -Iinclude -Iminilibx
SRCS = SRCS = \
src/main.c \
parsing/parser.c \
parsing/dispatch.c \
parsing/parsers/parser_A.c \
parsing/parsers/parser_C.c \
parsing/parsers/parser_L.c \
parsing/parsers/parser_SP.c \
parsing/parsers/parser_PL.c \
parsing/parsers/parser_CY.c \
parsing/parsers/parser_color.c \
parsing/parsers/parser_vec3.c \
parsing/parsers/parser_int.c \
parsing/parsers/parser_double.c \
parsing/utils/check_utils.c \
parsing/utils/error_utils.c \
parsing/utils/ft_split.c \
parsing/utils/token_utils.c

OBJS =$(SRCS:.c=.o)

LIBFT_DIR = libft
LIBFT =$(LIBFT_DIR)/libft.a
MLX_DIR = minilibx
MLX = $(MLX_DIR)/libmlx.a
MLX_FLAGS = -lXext -lX11 -lm -lbsd

all:$(NAME)

$(LIBFT):
	@make -C $(LIBFT_DIR)

mlx:
	@make -C $(MLX_DIR)

$(NAME):$(OBJS) $(LIBFT) mlx
	$(CC) $(CFLAGS) $(OBJS) $(MLX) $(MLX_FLAGS) $(LIBFT) -o $(NAME)

clean:
	rm -f $(OBJS)
	@make -C $(MLX_DIR) clean
	@make -C $(LIBFT_DIR) clean

fclean:clean
	rm -f $(NAME)
	@make -C $(MLX_DIR) clean
	@make -C $(LIBFT_DIR) fclean

re:fclean all

.PHONY: clean fclean all re

